#!/usr/sbin/nft -f

table inet filter {
    chain input {
        type filter hook input priority 0;
        policy accept;
    }

    chain forward {
        type filter hook forward priority 0;
        policy drop;

        # Allow already established connections
        ct state established,related accept

        # Allow forwarding from VM2 (192.168.50.100) to internet except restricted services
        ip saddr 192.168.50.100 ip daddr != 192.168.50.0/24 tcp dport { 80, 443 } drop     # Block HTTP & HTTPS
        ip saddr 192.168.50.100 ip daddr != 192.168.50.0/24 icmp drop                      # Block ping
        ip saddr 192.168.50.100 ip daddr != 192.168.50.0/24 accept                         # Allow other traffic

        # Allow traffic from other machines (or for routing)
        ip saddr != 192.168.50.100 accept
    }

    chain output {
        type filter hook output priority 0;
        policy accept;
    }
}
