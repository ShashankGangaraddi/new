#!/usr/sbin/nft -f

table inet filter {
    chain input {
        type filter hook input priority 0; policy drop;

        iif "lo" accept
        ct state established,related accept
        ip protocol icmp accept
    }

    chain forward {
        type filter hook forward priority 0; policy drop;

        iifname "enp0s8" ip saddr 192.168.50.100 ct state established,related accept
        iifname "enp0s8" ip saddr 192.168.50.100 tcp dport { 53, 80, 443 } accept  # DNS, HTTP, HTTPS
        iifname "enp0s8" ip saddr 192.168.50.100 udp dport 53 accept               # DNS over UDP
        iifname "enp0s8" ip saddr 192.168.50.100 ip protocol icmp accept           # ICMP (ping)

        log prefix "DROP: " flags all
    }

    chain output {
        type filter hook output priority 0; policy accept;
    }
}
